{% assign faqs = include.faqs | default: page.faqs %}
{% if faqs %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {% for f in faqs %}
    {
      "@type": "Question",
      "name": "{{ f.q | escape }}",
      "acceptedAnswer": { "@type": "Answer", "text": "{{ f.a | escape }}" }
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
</script>
{% endif %}
